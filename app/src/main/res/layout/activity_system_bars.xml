<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ccc"
    tools:ignore="MissingDefaultResource">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="TOP\nTOP\nTOP"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        android:background="@android:color/holo_blue_dark"
        android:gravity="center"
        android:text="BOTTOM"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="StatusBar"/>

                <me.reezy.ui.bk.BKTextView
                    android:id="@+id/color"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="COLOR"
                    app:bkCornerRadius="10dp"
                    app:bkSolidColor="@android:color/holo_green_dark" />

                <me.reezy.ui.bk.BKTextView
                    android:id="@+id/light"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="LIGHT"
                    app:bkCornerRadius="10dp"
                    app:bkSolidColor="@android:color/holo_green_dark" />

                <me.reezy.ui.bk.BKTextView
                    android:id="@+id/contrast"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="CONTRAST"
                    app:bkCornerRadius="10dp"
                    app:bkSolidColor="@android:color/holo_green_dark" />

                <me.reezy.ui.bk.BKTextView
                    android:id="@+id/overlay"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="OVERLAY"
                    app:bkCornerRadius="10dp"
                    app:bkSolidColor="@android:color/holo_green_dark" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:text="NavigationBar"/>

                <me.reezy.ui.bk.BKTextView
                    android:id="@+id/color2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="COLOR"
                    app:bkCornerRadius="10dp"
                    app:bkSolidColor="@android:color/holo_green_dark" />

                <me.reezy.ui.bk.BKTextView
                    android:id="@+id/light2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="LIGHT"
                    app:bkCornerRadius="10dp"
                    app:bkSolidColor="@android:color/holo_green_dark" />

                <me.reezy.ui.bk.BKTextView
                    android:id="@+id/contrast2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="CONTRAST"
                    app:bkCornerRadius="10dp"
                    app:bkSolidColor="@android:color/holo_green_dark" />

                <me.reezy.ui.bk.BKTextView
                    android:id="@+id/overlay2"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:gravity="center"
                    android:text="OVERLAY"
                    app:bkCornerRadius="10dp"
                    app:bkSolidColor="@android:color/holo_green_dark" />
            </LinearLayout>
        </LinearLayout>

        <me.reezy.ui.bk.BKTextView
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="BACKGROUND"
            app:bkCornerRadius="10dp"
            app:bkSolidColor="@android:color/holo_green_dark" />
        <me.reezy.ui.bk.BKTextView
            android:id="@+id/immersive_touch"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="IMMERSIVE TOUCH"
            app:bkCornerRadius="10dp"
            app:bkSolidColor="@android:color/holo_green_dark" />
        <me.reezy.ui.bk.BKTextView
            android:id="@+id/immersive_swipe"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="IMMERSIVE SWIPE"
            app:bkCornerRadius="10dp"
            app:bkSolidColor="@android:color/holo_green_dark" />
        <me.reezy.ui.bk.BKTextView
            android:id="@+id/immersive_transient"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="IMMERSIVE SWIPE TRANSIENT"
            app:bkCornerRadius="10dp"
            app:bkSolidColor="@android:color/holo_green_dark" />
    </LinearLayout>

</FrameLayout>